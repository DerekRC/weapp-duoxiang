/**app.wxss**/
 @import 'miniprogram_npm/@vant/weapp/common/index.wxss';

.container-center {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 16rpx;
  box-sizing: border-box;
}

.center-container{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
  Segoe UI, Arial, Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft Yahei',
  sans-serif;
}


.flex{
  display: flex;
  flex-direction: row;
}
.no-scale{
  flex-shrink: 0;
}

.row{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.row-center{
  align-items: center;
}


.column{
  display: flex;
  flex-direction: column;
}

.space-between{
  justify-content: space-between;
}

.end{
  justify-content: flex-end	;
}

.flex .right{
  margin-left: auto;
}


.card{
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  /*padding: 20rpx;*/
  margin: 28rpx;
  box-shadow:0rpx 5rpx 10rpx 0rpx rgba(153,153,153,0.2);
}


.mr18{
  margin-right: 18rpx;
}


.width100{
  width: 100%;
}

.space{
  width:100%;
  height:100%;
}

.divider{
  width:100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height:1rpx;
  background:rgba(204,204,204,1);
}


.scroll-view_H{
  white-space: nowrap;
}


.text{
  white-space: nowrap;
}
